{
    "configurations": [
        
        {
            "name": "(GDB) 调试 jsonCppTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/jsonCpp/build/jsonCppTest.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test/jsonCpp",
            "environment": [{
                "name": "PATH",
                "value": "${env:PATH};D:/qt/Tools/mingw1310_64/bin;D:/qt/Tools/mingw1310_64/x86_64-w64-mingw32/lib"
            }],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:/qt/Tools/mingw1310_64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "启用调试符号加载",
                    "text": "set debug-file-directory D:/qt/Tools/mingw1310_64/x86_64-w64-mingw32/lib", // 添加符号路径
                    "ignoreFailures": true
                },
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build jsonCppTest 2"  // 需要对应的构建任务
        },
        {
            "name": "C/C++: g++.exe 构建和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "D:\\qt\\Tools\\mingw1310_64\\bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\qt\\Tools\\mingw1310_64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe 生成活动文件"
        }
    ],
    "version": "2.0.0"
}