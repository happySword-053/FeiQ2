{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake jsoncpptest",
            "type": "shell",
            "command": "cmake ",
            "args": [
                "-S",
                "${workspaceFolder}/test/jsonCpp",
                "-B",
                "${workspaceFolder}/test/jsonCpp/build",
                "-G",
                "MinGW Makefiles",
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/test/jsonCpp"  // 指定构建目录
            },
            
        },
        {
            "label": "Build jsonCppTest 2",
            "type": "shell",
            "command": "cmake --build build --target jsonCppTest --config Debug", // 添加--config Debug
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/test/jsonCpp"  // 指定构建目录
            },
            "problemMatcher": ["$msCompile"],
            "dependsOn": [
                "Configure CMake jsoncpptest"
            ]
        },
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "D:\\Cmake_dir\\bin\\cmake.exe",
            "args": [
                "-S",
                "D:/qtproject/FeiQ2",
                "-B",
                "D:/qtproject/FeiQ2/build",
                "-G",
                "MinGW Makefiles",
                "-DCMAKE_CXX_COMPILER=D:\\qt\\Tools\\mingw1310_64\\bin\\g++.exe"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build FeiQ2",
